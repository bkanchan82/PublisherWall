<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:id="@+id/event_list_item_container">

    <TextView
        android:id="@+id/tv_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="InboundCon"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toronto, Ontario"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_location_12dp"
        android:drawableLeft="@drawable/ic_location_12dp"
        app:layout_constraintStart_toStartOf="@+id/tv_event_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_name" />

    <TextView
        android:id="@+id/tv_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="6 October 2016"
        android:textStyle="bold"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_event_black_16dp"
        android:drawableLeft="@drawable/ic_event_black_16dp"
        app:layout_constraintStart_toStartOf="@+id/tv_event_location"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_location" />

    <TextView
        android:id="@+id/visit_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="VISIT PAGE"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#dadada"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_date"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/favoriteCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_favorite_red_24dp"
        android:drawableLeft="@drawable/ic_favorite_red_24dp"
        android:drawablePadding="8dp"
        android:text="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
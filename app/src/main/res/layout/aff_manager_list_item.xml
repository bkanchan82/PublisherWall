<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/manager_list_item_container">

    <TextView
        android:id="@+id/tv_manager_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="AWMDennis"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_manager_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contact@adworkmedia.com"
        android:drawablePadding="8dp"
        app:layout_constraintStart_toStartOf="@+id/tv_manager_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_manager_name" />

    <TextView
        android:id="@+id/tv_manager_phone_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="586-703-1967"
        android:textStyle="bold"
        android:drawablePadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/aim_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="AIM : AWMdennis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_manager_phone_no"
         />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#dadada"
        app:layout_constraintTop_toBottomOf="@+id/skype_id"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/skype_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Skype : AWMdennis"
        app:layout_constraintStart_toStartOf="@+id/tv_manager_email"
        app:layout_constraintTop_toBottomOf="@+id/tv_manager_email" />

</android.support.constraint.ConstraintLayout>